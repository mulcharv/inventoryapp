extends layout 

block content 
    h1 #{title}: #{artist.name} 
    p= artist.years_active

    if artist_records.length 

        p #[strong Delete the following records before attempting to delete this artist.] 

        div(style='margin-left:2vw; margin-top:2vw')

            h4 Records 

            each record in artist_records 
                a(href=record.url) #{record.title} 
                | #{record.release_date_formatted} 

    else 
        p Do you really want to delete this Artist? 

        form(method='POST' action='') 
            div.form-group 
                input#artistid.form-control(type='hidden', name='artistid', required='true', value=artist._id)
            button.btn.btn-primary(type='submit') Delete