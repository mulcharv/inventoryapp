extends layout 

block content 
    h1=title 

    form(method='POST' action='')
        div.form-group 
            label(for='name') Name: 
            input#name.form-control(type='text' placeholder='Artist Name' name='name' required='true' value=(undefined===artist ? '' : artist.name) )
        
        div.form-group 
            label(for='start_date') Start Date: 
            input#start_date.form-control(type='number' placeholder='Year(ex. 2009)' name='start_date' value=(undefined===artist ? '' : artist.start_date) )
        
        div.form-group 
            label(for='end_date') End Date: 
            input#end_date.form-control(type='number' placeholder='Year(ex. 2009)' name='end_date' value=(undefined===artist ? '' : artist.end_date) )
        
        
        button.btn.btn-primary(type='submit') Submit 
        
        
        if errors 
            ul 
                for error in errors 
                    li!= error.msg